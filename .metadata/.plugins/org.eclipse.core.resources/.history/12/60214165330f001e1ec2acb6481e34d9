package baekjoon;

import java.util.Arrays;

public class Main {

	static long solution(int price, int money, int count) {
		long answer = money;
		
		for(int i = 1; i<=count ; i++) {
			money-=price*i;			
		}
		
		
		return -money;
	}

	public static void main(String[] args) {
		System.out.println(solution(3,20,4));

	}
}
