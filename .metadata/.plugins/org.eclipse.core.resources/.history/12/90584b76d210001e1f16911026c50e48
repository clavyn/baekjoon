package baekjoon;

import java.util.Stack;

public class Main {

	static String solution(int n) {
		String answer ="";

		Stack<Integer> stk = new Stack<>();
		
		while(n!=0) {
			
			stk.push(n%2);
			n/=2;
		}
		System.out.println(stk.size());
		for(int i = 0 ;i<5 ; i++) {			
			answer+=stk.pop();
		}
		
		
		return answer;
		

	}

	public static void main(String[] args) {
		System.out.println(solution(20));

	}
}
