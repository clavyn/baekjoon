package baekjoon;

import java.util.Arrays;
import java.util.Stack;

public class Main {

	static int solution(int n) {
		int[] hap = {0,1};
		int tmp=0;
		
		for(int i = 0; i < n ; i++ ) {
			tmp+=i;
		}
		
		
		return tmp;
	}

	public static void main(String[] args) {

		System.out.println(solution(5));

	}
}
