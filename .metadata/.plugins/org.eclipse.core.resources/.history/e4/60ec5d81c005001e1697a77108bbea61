package baekjoon;

import java.io.IOException;
import java.util.Arrays;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws IOException {
		//우선 오름차순으로 정렬 후 , 원래 배열(정렬되지 않은 배열)과 비교하여 해당 값이 있는 인덱스를 추출한다.
		//배열안에 있는 정렬기능을 사용하지 않고 버블정렬로 할 것
		Scanner sc = new Scanner(System.in);
		int [] scores = new int [8];
		int total=0;
		int [] index = new int [5];
		
		for(int i = 0; i<8; i++) {
			scores[i]=(sc.nextInt());
		}
		
		for(int i = 0 ; i < 8 ; i++) {
			total+=scores[i];
		}
		System.out.println(total);//총점
		
		for(int i=0;i<8;i++) {//오름차순 정렬
			for(int j=i; j<8-i;j++) {
				if(j>j+1) {
					int tmp = scores[j];
					scores[j]=scores[j+1];
					scores[j+1] = tmp;
				}
			}
		}
		
		System.out.println(Arrays.toString(scores));
		
		
	}
}
