package baekjoon;

import java.util.Arrays;

public class Main {

	static int solution(long a) {
		if(a==1)return 0;
		int cnt = 0;
		do {
			a=(a%2==0)?a/2:a*3+1;
			cnt++;
		}while(a!=1);
		
		if(a==1)return cnt;
		else return -1;
		
	}

	public static void main(String[] args) {
		System.out.println(solution(6));

	}
}
