package baekjoon;

import java.io.IOException;


public class Main {
	
	static int[] arr = {1,10,5,7,4}; //정렬해야 할 배열
		
	public static void bubbleSort(int[] array) {
		for(int i=0; i<array.length;i++) { //arraylength:3
			for(int j=0;j<array.length-1;j++) {//j<3-0-1->2,1
				if(array[j]>array[j+1]) {//10>5(j=1)
					swap(array,j,j+1);
				}
			}
		}
	}
	public static void swap(int[]array,int source, int target) {
		int tmp = array[source];//tmp=array[1] 큰 수 저장
		array[source]=array[target];//array[
		array[target]=tmp;
	}
	
	public static void printArray(int[] array) {
		for(int data:array) {
			System.out.print(data+" ");
		}
		System.out.println();
	}
		
	public static void main(String[] args) throws IOException{
		System.out.println("정렬 전");
		printArray(arr);
		bubbleSort(arr);
		System.out.println("정렬 후");
		printArray(arr);
		
		
	}
	
	
	
	

}
