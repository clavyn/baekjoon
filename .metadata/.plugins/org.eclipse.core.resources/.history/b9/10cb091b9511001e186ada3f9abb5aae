package baekjoon;

public class Main {

	static String solution(String s , int n) {
		String answer="";
		int origin = n;
		char [] arr = s.toCharArray();
		for(int i = 0; i< arr.length ; i++) {
			n=origin;
			if(arr[i]==' ') {
				answer+= ' ';
				continue;
				}
			if(!(65<=arr[i]+n&&arr[i]+n<=90)||!(97<=arr[i]+n&&arr[i]+n<=122)) {
				n-=26;
			}
//			if(123<=arr[i]+n) n-=26;
			answer += (char)(arr[i]+n); 
		}
		
		return answer;

	}

	public static void main(String[] args) {

		System.out.println(solution("AB", 1));
		System.out.println(solution("Z   A", 1));
		System.out.println(solution("a B z", 4));

	}
}
