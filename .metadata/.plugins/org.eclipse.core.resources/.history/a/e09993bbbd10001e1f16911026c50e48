package baekjoon;

import java.util.ArrayList;

public class Main {

	static int[] solution (int n, int m) {
		int [] answer = new int [2];
		if(n>m) {
			int tmp = n;
			tmp=n;
			n=m;
			m=tmp;
		}
		ArrayList<Integer> n_arr  = new ArrayList<>();
		ArrayList<Integer> m_arr  = new ArrayList<>();		
				
		for(double i = 1 ; i <= n ; i++) {//n의 약수구하기
			if((n/i)%1==0) {				
				n_arr.add((int)i);
			}
		}
		for(double i = 1 ; i <= m ; i++) {//m의 약수구하기
			if((m/i)%1==0) {				
				m_arr.add((int)i);
			}
		}
		int n_tmp=0;
		for(int i = 0; i<n_arr.size();i++) {//최대공약수
				n_tmp=n_arr.get(i);
			for(int j = 0 ; j < m_arr.size() ; j++) {
				if(n_tmp==m_arr.get(i)) {
					answer[0]=n_tmp;
				}
			}
		}
		
		return answer;
		
	}
	

	public static void main(String[] args) {
		System.out.println(solution(3,12)); //[3, 12]
		System.out.println(solution(1,10)); //[1, 10]
	}
}
