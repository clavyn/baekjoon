package baekjoon;

import java.util.Arrays;

public class Main {

	static int solution(int a) {
		for (int i = 0; a != 1 && i < 500; i++) {
	        if (a % 2 == 0) {
	            a = a / 2;
	        } else {
	            a = a * 3 + 1;
	        }
	    }
	    
	    if (a == 1) {
	        return i + 1;
	    } else {
	        return -1;
	    }
		
	}

	public static void main(String[] args) {
		System.out.println(solution(626331));

	}
}
