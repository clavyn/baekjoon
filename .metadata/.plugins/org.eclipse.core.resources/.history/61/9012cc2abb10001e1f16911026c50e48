package baekjoon;

import java.util.Stack;

public class Main {

	static int solution (int n) {
		int answer = 0 ;
		int i = 1;
		Stack<Integer>stk = new Stack<>();
		while(n>0) {
			stk.add(n%3);
			n/=3;		
		}
		while(!stk.isEmpty()) {
			answer+=stk.pop()*i;			
			i*=3;
		}
		
		return answer;
	}
	

	public static void main(String[] args) {
		
		System.out.println(solution(1));
	}
}
